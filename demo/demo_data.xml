<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account.group_account_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>

        <record id="funds_held_in_trust" model="account.account">
            <field name="code">111010</field>
            <field name="name">Funds Held in Trust</field>
            <field name="user_type_id" ref="account.data_account_type_current_liabilities"/>
        </record>
        <record id="base.main_company" model="res.company">
            <field name="account_trust_id" ref="account_trust.funds_held_in_trust"/>
        </record>
        <record id="trust_account" model="account.account">
            <field name="code">101404</field>
            <field name="name">Trust Bank Account</field>
            <field name="user_type_id" ref="account.data_account_type_liquidity"/>
        </record>
        <record id="trust_account" model="res.partner.bank">
            <field name="acc_number">888777666555444</field>
            <field name="bank_name">Trust</field>
            <field name="partner_id" ref="base.main_partner"/>
        </record>
        <record id="bank_journal" model="account.journal">
            <field name="name">Trust Fund</field>
            <field name="code">TRS</field>
            <field name="type">bank</field>
            <field name="show_on_dashboard" eval="True"/>
            <field name="is_trust_account" eval="True"/>
            <field name="trust_payment_journal_id" model="account.journal" search="[
                ('type', '=', 'bank'),
                ('company_id', '=', obj().env['res.company']._company_default_get('account.journal').id)]"/>
            <field name="default_debit_account_id" ref="trust_account"/>
            <field name="default_credit_account_id" ref="trust_account"/>
        </record>
    </data>
</odoo>